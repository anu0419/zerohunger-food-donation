<!DOCTYPE html>

<html lang="en">

<head>

    <meta charset="UTF-8">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Donor Dashboard</title>



    <!-- Bootstrap CSS -->

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>



    <style>

        /* Color Palette */

        :root {

            --primary-color: #33658A;

            --secondary-color: #86BBD8;

            --accent-color: #82C222;

            --highlight-color: #F6AE2D;

            --background-light: #F9F9F9;

            --text-dark: #333;

        }

            

        /* General Styles */

        /* Background Pattern */

          body {

              font-family: 'Poppins', sans-serif;

              background-color: #f6f6f6;

              background-image: url("https://www.transparenttextures.com/patterns/cubes.png");

              background-size: 200px;

              background-blend-mode: overlay;

              margin: 0;

              padding: 0;

            }



        /* Navbar */

        .navbar {

            background-color: var(--primary-color);

            padding: 15px 20px;

        }

        .navbar-brand {

            font-weight: bold;

            font-size: 22px;

            color: white;

        }

        .navbar-toggler {

            border: none;

        }

        .nav-link {

            color: white !important;

            font-weight: 500;

            padding: 10px 15px;

            transition: 0.3s;

        }

        .nav-link:hover {

            background-color: var(--secondary-color);

            border-radius: 5px;

        }



        /* Dashboard Section */

        .dashboard-container {

            display: flex;

            justify-content: center;

            align-items: center;

            min-height: 100vh;

            padding: 60px 20px;

        }

        .card-container {

            display: flex;

            gap: 40px;

            max-width: 1200px;

            width: 100%;

            justify-content: center;

            flex-wrap: wrap;

        }



        /* Stylish Cards */

        .dashboard-card {

            background: var(--highlight-color);

            padding: 40px;

            border-radius: 20px;

            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);

            text-align: center;

            width: 450px;

            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;

            color: white;

            position: relative;

            overflow: hidden;

        }

        .dashboard-card::after {

            content: "";

            position: absolute;

            width: 100%;

            height: 5px;

            background-color: var(--accent-color);

            bottom: 0;

            left: 0;

            transition: height 0.3s ease-in-out;

        }

        .dashboard-card:hover {

            transform: scale(1.07);

            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);

        }

        .dashboard-card:hover::after {

            height: 10px;

        }

        .dashboard-card h2 {

            font-size: 28px;

            font-weight: bold;

            margin-bottom: 15px;

        }

        .dashboard-card p {

            font-size: 16px;

            line-height: 1.6;

        }



        /* Buttons */

        .donate-btn {

            background-color: var(--accent-color);

            border: none;

            color: white;

            padding: 12px 25px;

            border-radius: 50px;

            font-size: 18px;

            font-weight: bold;

            cursor: pointer;

            transition: transform 0.3s, background-color 0.3s;

            display: inline-block;

        }

        .donate-btn:hover {

            background-color: var(--primary-color);

            transform: scale(1.05);

        }



        /* Floating Buttons */

        .floating-btn {

            position: fixed;

            bottom: 20px;

            right: 20px;

            background-color: var(--primary-color);

            color: white;

            border: none;

            border-radius: 50%;

            width: 60px;

            height: 60px;

            font-size: 26px;

            box-shadow: 0 4px 10px rgba(0,0,0,0.2);

            cursor: pointer;

            display: flex;

            align-items: center;

            justify-content: center;

            transition: 0.3s;

        }

        .floating-btn:hover {

            background-color: var(--secondary-color);

        }



        .map-btn {

            bottom: 90px;

        }



        /* Micro Interaction - Animated Wave on Card Hover */

        @keyframes wave {

            0% { transform: translateX(-100%); }

            100% { transform: translateX(100%); }

        }

        .dashboard-card:hover::before {

            content: "";

            position: absolute;

            width: 120%;

            height: 10px;

            background-color: white;

            top: 0;

            left: -10%;

            transform: rotate(2deg);

            animation: wave 0.6s linear;

        }

    </style>

</head>

<body>

    <!-- Navbar -->

    <nav class="navbar navbar-dark fixed-top">

        <div class="container-fluid">

            <a class="navbar-brand" href="#">ZeroHunger</a>

            <div>

                <h3 class="navbar-toggler" style="border: none; color: white;">Donor</h3>

                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar">

                    <span class="navbar-toggler-icon"></span>

                </button>

            </div>



            <!-- Sidebar -->

            <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar">

                <div class="offcanvas-header">

                    <h5 class="offcanvas-title">MENU</h5>

                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>

                </div>

                <div class="offcanvas-body">

                    <ul class="navbar-nav">

                        <li class="nav-item"><a class="nav-link active" href="#">Home</a></li>

                        <li class="nav-item"><a class="nav-link" href="/don_profile">Profile</a></li>

                        <li class="nav-item"><a class="nav-link" href="/don_history">History</a></li>

                        <li class="nav-item"><a class="nav-link" href="/find-organizations">Find Organizations</a></li>

                        <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>

                    </ul>

                </div>

            </div>

        </div>

    </nav>



    <!-- Dashboard Section -->

    <div class="dashboard-container">

        <div class="card-container">

            <div class="dashboard-card">

                <h2>Donate Food</h2>

                <p>Help reduce food waste and provide meals to those in need.</p>

                <form action="/donat_food" method="get">

                    <button class="donate-btn">Donate</button>

                </form>

            </div>



            <div class="dashboard-card">

                <h2>Donate Grocery</h2>

                <p>Support families facing hardships by donating essential groceries.</p>

                <form action="/donat_grocy" method="get">

                    <button class="donate-btn">Donate</button>

                </form>

            </div>

        </div>

    </div>



    <!-- Floating Buttons -->

    <a href="/find-organizations" class="floating-btn map-btn">üó∫Ô∏è</a>

    <button id="chatbotBtn" class="floating-btn chat-btn" style="bottom: 160px;">‚ùì</button>



    <!-- Chatbot Modal -->

    <div class="modal fade" id="chatbotModal" tabindex="-1">

        <div class="modal-dialog">

            <div class="modal-content">

                <div class="modal-header">

                    <h5 class="modal-title">Help Center</h5>

                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>

                </div>

                <div class="modal-body">

                    <div class="list-group" id="questionsList">

                        <!-- Questions will be loaded here -->

                    </div>

                </div>

            </div>

        </div>

    </div>



    <script src="/js/ml-services/smart-chatbot-service.js"></script>

    <script>

        // Initialize chatbot

        document.addEventListener('DOMContentLoaded', function() {

            const chatbotModal = new bootstrap.Modal(document.getElementById('chatbotModal'));

            const questionsList = document.getElementById('questionsList');

            

            // Load donor questions

            const questions = smartChatbotService.getQuestions('donor');

            questionsList.innerHTML = questions.map(q => `

                <button class="list-group-item list-group-item-action" data-id="${q.id}">

                    ${q.question}

                </button>

            `).join('');

            

            // Handle question clicks

            questionsList.addEventListener('click', function(e) {

                if (e.target.matches('.list-group-item')) {

                    const questionId = e.target.dataset.id;

                    const answer = smartChatbotService.getAnswer(questionId, 'donor');

                    

                    // Show answer

                    const answerElement = document.createElement('div');

                    answerElement.className = 'alert alert-info mt-3';

                    answerElement.textContent = answer;

                    

                    // Remove previous answer if exists

                    const previousAnswer = questionsList.querySelector('.alert');

                    if (previousAnswer) {

                        previousAnswer.remove();

                    }

                    

                    questionsList.appendChild(answerElement);

                }

            });

            

            // Show modal on button click

            document.getElementById('chatbotBtn').addEventListener('click', function() {

                chatbotModal.show();

            });

        });

    </script>

</body>

</html>
